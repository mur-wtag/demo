<% if @product.errors.any? %>
$('#editRecord .modal-title').text('<%= t("shared.update", resource: "Teacher") %>');
$('#editRecord .modal-body').html('<%= j render("form") %>');

$('#editRecord .form-actions').prepend("<button type='button' class='btn btn-secondary mr-2' data-dismiss='modal' aria-label='Close'>Close</button>");
$('#editRecord').modal('show');
<% else %>
$('#editRecord').modal('hide');
customNotificator.notice("<%= t('shared.updated', resource: @product.class.to_s.humanize) %>");
location.href = "<%= products_path %>"
<% end %>
